---
const {
  title,
  img,
  authors,
  link,
  target = "_blank",
  desc,
  fontmatter,
} = Astro.props;
const { Content } = await desc.render();
import { Image } from "astro:assets";
---

<div class="rounded-lg bg-slate-200 my-12 p-6">
  <div class="flex-col md:flex-row">
    {
      img && (
        <Image
          src={img}
          width={750}
          height={422}
          format="webp"
          alt={title}
          class="max-w-full md:max-w-[13rem] rounded-lg"
        />
      )
    }
    <div class="grow w-full">
      <h1 class="text-xl font-bold mb-1">
        {title}
        <!-- {type && <div class="badge badge-secondary mx-2">{type}</div>} -->
      </h1>
      <p class="py-1 text-1xl">{authors}</p>
      <!-- <div class="card-actions justify-end">
          {
            tags &&
              tags.map((tag) => (
                <a
                  href={`${tag_url}/${tag}`}
                  class="badge badge-outline">
                  {tag}
                </a>
              ))
          }
        </div> -->
    </div>
  </div>
  <div class="my-4">
    <Content />
  </div>
</div>
