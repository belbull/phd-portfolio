---
const {
  title,
  img,
  authors,
  link,
  target = "_blank",
  desc,
  fontmatter,
} = Astro.props;
const { Content } = await desc.render();
import { Image } from "astro:assets";
---

<div class="rounded-lg bg-slate-200 my-12 p-6">
  <div class="flex-col md:flex-row">
    {
      img && (
        <Image
          src={img}
          width={750}
          height={422}
          format="webp"
          alt={title}
          class="max-w-full md:max-w-[13rem] rounded-lg"
        />
      )
    }
    <div class="grow w-full">
      <h1 class="text-xl font-bold mb-1">
        {title}
      </h1>
      <p class="py-1 text-1xl">{authors}</p>
    </div>
  </div>
  <div class="my-4">
    <Content />
  </div>
  <div>
    {
      link && (
        <span>
          {" "}
          [<a href={link}> pdf </a>]
        </span>
      )
    }
  </div>
</div>
