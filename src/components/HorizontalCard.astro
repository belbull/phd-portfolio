---
const {
  title,
  img,
  authors,
  link,
  paper,
  doi,
  conference,
  target = "_blank",
  desc,
  fontmatter,
} = Astro.props;
const { Content } = await desc.render();
import { Image } from "astro:assets";
---

<div class="rounded-lg my-12">
  <div class="flex-col md:flex-row">
    {
      img && (
        <Image
          src={img}
          width={750}
          height={422}
          format="webp"
          alt={title}
          class="max-w-full md:max-w-[13rem] rounded-lg"
        />
      )
    }
    <div class="grow w-full">
      <h1 class="text-lg font-bold mb-1">
        {title}
      </h1>
      <p class="py-1 text-md">{authors}</p>
      {paper && <p class="py-1 text-md italic">{conference}</p>}
    </div>
  </div>
  <div class="my-1 text-md">
    <Content />
  </div>
  <div>
    {
      paper && (
        <span class="mr-1">
          {" "}
          <a
            href={link}
            class="text-blue-600 hover:underline">
            [ pdf ]
          </a>
        </span>
      <span>
          <a
            href={doi}
            class="text-blue-600 hover:underline">
            [ doi ]
          </a>
        </span>
      )
    }
  </div>
</div>
